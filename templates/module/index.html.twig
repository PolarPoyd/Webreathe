{% extends 'base.html.twig' %}

{% block title %}Module index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5">Mes modules</h1>

        <table class="table table-hover mt-5"> 
            <thead scope="row"> 
                <tr>
                    <th scope="col">Appareils</th>
                    <th scope="col">Cr√©e le</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for module in modules %}
                <tr>
                    <td>{{ module.name }}</td>
                    <td>
                        {% if module.createdAt %}
                            {{ module.createdAt|date('Y-m-d H:i:s', 'Europe/Paris') }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-link" href="{{ path('app_module_edit', {'id': module.id}) }}" title="Modifier"><i class="fas fa-edit"></i></a>
                            {{ include('module/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Il n'y a rien ici...</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-center mt-5">
            <a class="btn btn-primary" href="{{ path('app_module_new') }}">Ajouter un module</a>
        </div>
        <div class="text-center mt-5">
            <a class="btn btn-primary" href="{{ path('app_home') }}">Dashboard</a>
        </div>
    </div>

    <div style="height: 300px;"></div>

{% endblock %}
