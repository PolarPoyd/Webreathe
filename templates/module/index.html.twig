{% extends 'base.html.twig' %}

{% block title %}Module index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5">Mes modules</h1>

        <table class="table table-hover table-bordered mt-5"> 
            <thead class="table-primary"> 
                <tr>
                    <th scope="col">Appareils</th>
                    <th scope="col">Cr√©e le</th>
                    <th scope="col">Actions</th>
                    <th scope="col">Actions</th> 
                </tr>
            </thead>
            <tbody>
            {% for module in modules %}
                <tr>
                    <td>{{ module.name }}</td>
                    <td>
                        {% if module.createdAt %}
                            {{ module.createdAt|date('Y-m-d H:i:s', 'Europe/Paris') }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>
                        <a class="btn btn-outline-info" href="{{ path('app_module_edit', {'id': module.id}) }}">Modifier</a>
                    </td>
                    <td>
                        {{ include('module/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Il n'y a rien ici...</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-center mt-5">
            <a class="btn btn-primary" href="{{ path('app_module_new') }}">Ajouter un module</a>
        </div>
    </div>
{% endblock %}
